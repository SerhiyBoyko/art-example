@mixin placeholder_color($color, $font_size, $font-weight:normal){
	&::-webkit-input-placeholder{
		color:$color;
		font-size:$font_size;
		font-weight:$font-weight;
	}
	&:-moz-placeholder{
		color:$color;
		opacity:1;
		font-size:$font_size;
		font-weight:$font-weight;
	}
	&::-moz-placeholder{
		color:$color;
		opacity:1;
		font-size:$font_size;
		font-weight:$font-weight;
	}
	&:-ms-input-placeholder{
		color:$color;
		font-size:$font_size;
		font-weight:$font-weight;
	}
	&-webkit-appearance:none;
}
@mixin align-middle{
	vertical-align: -webkit-baseline-middle;
	vertical-align: -moz-middle-with-baseline;
	vertical-align:middle;
}

@mixin clear{
	&:after{
		content:'';
		display:block;
		clear:both;
	}
}
@mixin mask($side:before,$top:0,$left:0){
	&:$side{
		content:'';
		position:absolute;
		top:$top;
		left:$left;
		right:0;
		bottom:0;
	}
}
@mixin pos-full{
	position:absolute;
	top:0;
	left:0;
	right:0;
	bottom:0;
}


@mixin bg($wide:cover,$x:center,$y:center){
	background-repeat:no-repeat;
	background-position:$x $y;
	background-size:$wide;
}

@mixin popup($index:1){
	margin:0;
	padding:0;
	width:100%;
	min-height:100%;
	height:100%;
	position:fixed;
	top:0;
	left:0;
	right:0;
	bottom:0;
	z-index:$index;
	overflow:auto;
}


