@mixin btn-spin($color_before,$color_after,$size){
	&.roll-box {
		display:flex;
		align-items:center;
		justify-content:center;
		box-sizing: border-box;
		box-shadow: inset 0 0 0 1px $color_before;
		line-height:0;
		color: $color_before;
		position: relative;
		&::before,
		&::after {
			content: '';
			+size: 100% 100%;
			box-sizing: inherit;
			position: absolute;
		}
		&.roll-box{
			+size: $size $size;
			.active & {
				color: $color_after;
			}
			&:before,
			&:after {
				top: 0;
				left: 0;
			}
			&:before {
				border: 2px solid transparent;
			}
			.active &:before {
				border-top-color: $color_after;
				border-right-color: $color_after;
				border-bottom-color: $color_after;
			}
			&:after {
				border: 0 solid transparent;
				opacity:0;
			}
			.active &:after {
				border-top: 2px solid $color_after;
				border-left-width: 2px;
				border-right-width: 2px;
				transform: rotate(270deg);
				opacity:1;
			}
		}
		&.roll-box {
			border-radius: 100%;
			box-shadow: none;
			&::before,
			&::after {
				border-radius: 100%;
			}
		}
	}
}


