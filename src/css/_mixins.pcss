@mixin bottom-shadow($color){
	background: -moz-linear-gradient(bottom, rgba($color,0.95) 20%, rgba($color,0) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(bottom, rgba($color,0.95) 20%,rgba($color,0) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(to top, rgba($color,0.65) 20%,rgba($color,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
}
@mixin right-shadow($color,$opacity:0.65){
	background: -moz-linear-gradient(right, rgba($color,0.95) 20%, rgba($color,0) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(right, rgba($color,0.95) 20%,rgba($color,0) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(to left, rgba($color,$opacity) 20%,rgba($color,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
}
