	.g-logo{
		background-color: #fff;
		@media $m{
		&{
			+size:90px 90px;
			@include flex-center;
		}}
		@media $t,$d{
		&{
			margin-left: calc(12.5% + 50px);
			align-self:baseline;
			width: 25%;
			padding-top: 25%;
			min-width:100px;
		}}
	}
	.text-box{
		box-sizing:border-box;
		@media $m{
		&{
			margin-bottom: 30px;
		}}
		@media $t,$d{
		&{
			padding-left: 25px;
			@include m-b(100vh);
		}}

		.top-box{
			@media $m{
			&{
				box-sizing:border-box;
				padding-right: 100px;
				padding-top: 23px;
			}}
		}
	}
}
.container-grid{
	box-sizing:border-box;
	@media $m{
	&{
		display: flex;
		flex-direction:column;
	}}
	@media $t,$d{
	&{
		padding: 0 25px;
	}}
	.row-container{
