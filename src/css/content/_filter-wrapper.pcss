		}}
		@media $t{
		&{
			height: 100%;
		}}
		@media $d{
		&{
			height: 195px;
			&:before{
				height: 100%;
				max-height:0;
			}
		}}
	}

	.box-content{
		@media $m{
		&{
			@include p-h(70vh);
		}}
		@media $t{
		&{
			@include p-h(70vh);
		}}
		@media $d{
		&{
			@include p-h(70vh);
		}}

	}
	.title{
		box-sizing: border-box;
		@media $m{
		&{
			padding-right:25px;
			font-size:20px;
			line-height:27px;
		}}
		@media $t{
		&{
			padding-right: 100px;
			font-size:24px;
			line-height:32px;
		}}
		@media $d{
		&{
			padding-right: 125px;
			font-size:30px;
			line-height:40px;
		}}
	}
	.img-box{
		@media $m{
		&{
			margin:30px 0;
		}}
		@media $t,$d{
		&{
			margin:50px 0;
		}}
		img{
			max-width:100%;
		}
	}
	ul,
	ol{
		@media $m,$t{
		&{
			margin:30px 0 0;
			& > *{
				margin-top:30px;
			}
		}}
		@media $t{
		&{
			padding:0 25px;
		}}
		@media $d{
		&{
			margin-bottom:0!important;
			& > *{
				margin-top:50px;
			}
		}}
		li{

			@media $t{
			&{
				font-size:14px;
				line-height:20px;
			}}
			&:before{
				@media $m,$t{
				&{
					width:30px;
					min-width:30px;
				}}
			}
		}
	}
	.section{
		@media $m{
		&{
			padding-top: 25px;
		}}
		@media $t{
		&{
			padding-top: 45px;
			padding-bottom: 45px;
		}}
	}
}