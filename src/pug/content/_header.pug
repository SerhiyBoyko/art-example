mixin header()
	header&attributes(attributes)
		.container-wide.header-container
			a.logo-art(href=pages.main.url): img.img(src='images/logo-art.svg')
			ul.number-box.only-d
				li: a.hover-link(href='tel:+74956173946') +7 (495) 617-39-46
				li: a.hover-link(href='mailto:info@art-formula.ru') info@art-formula.ru
			ul.nav.only-d
				li: a.hover-link(href='#').active О компании
				li: a.hover-link(href=pages.services.url) Услуги
				li: a.hover-link(href=pages.projects.url) Проекты и клиенты
				li: a.hover-link(href=pages.team.url) Команда
				li: a.hover-link(href=pages.contact.url) Контакты
